<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowBackground">@drawable/app_960x720</item>
    </style>
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">

        <!--<item name="background">@drawable/actionbarcolour</item>-->

        <!--<item name="android:icon">@drawable/logo</item>-->
        <!--<item name="icon">@drawable/logo</item>-->

        <item name="android:title">Trip History</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:displayOptions">showHome</item>
        <item name="displayOptions">showHome</item>
        <item name="contentInsetStart">0dp</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:titleTextStyle">@style/myTheme.ActionBar.Text</item>
    </style>
    <style name="myTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="OverFlow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <!--<item name="android:src">@mipmap/ic_more_vert_black</item>-->
    </style>

    <style name="FullscreenTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
    </style>

    <style name="FullscreenActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@null</item>
    </style>


</resources>
