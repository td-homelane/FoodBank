<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/typeLayout"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="match_parent">

        <TextView
            android:layout_margin="20dp"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/food_type_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/packed_text"
            android:layout_margin="20dp"
            android:background="@drawable/red_circle"
            android:text="@string/packed_txt"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_above="@+id/center_view"
            android:gravity="center"
            android:layout_height="150dp" />

        <View
            android:id="@+id/center_view"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_margin="20dp"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/raw_material"
            android:layout_below="@+id/center_view"
            android:layout_margin="20dp"
            android:background="@drawable/blue_circle"
            android:text="@string/raw_materials"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:gravity="center"
            android:layout_height="150dp" />

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/confirmLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/type_layout"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <TextView
                android:text="@string/selected_type"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/selectedType"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_below="@+id/type_layout"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/current_location_layout"
            android:orientation="horizontal">

            <TextView
                android:text="@string/current_location"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/current_location"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/destination_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_below="@+id/current_location_layout"
            android:orientation="horizontal">

            <TextView
                android:text="@string/destination_txt"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/destination_name"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fare_estimate_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_below="@+id/destination_layout"
            android:orientation="horizontal">

            <TextView
                android:text="@string/fare_estimate"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fare_estimate"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <Button
            android:layout_alignParentBottom="true"
            android:text="@string/book_cab"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</RelativeLayout>